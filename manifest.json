{
    "manifest_version": 3,
    "name": "SoundCloud-Shuffle",
    "version": "1.0",
    "description": "Soundcloud Player with true random shuffle for SoundCloud playlists and likes",
    "permissions": ["tabs", "scripting", "activeTab"],
    "host_permissions": ["https://soundcloud.com/*", "*://soundcloud.com/*"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "Icons/icon-16.png",
            "48": "Icons/icon-48.png",
            "128": "Icons/icon-128.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["https://soundcloud.com/*", "*://soundcloud.com/*"],
            "js": ["capture.js"],
            "run_at": "document_start",
            "all_frames": false
        },
        {
            "matches": ["https://soundcloud.com/*", "*://soundcloud.com/*"],
            "js": ["content.js"],
            "run_at": "document_end",
            "all_frames": false
        }
    ],
    "icons": {
        "16": "Icons/icon-16.png",
        "48": "Icons/icon-48.png",
        "128": "Icons/icon-128.png"
    }
}